<%- include('partials/studentHeader'); %>

<div class= "row small-top-buffer">
    <div class= "col-lg-4"></div>
    <div class= "col-lg-4">
      <div class="container">
        <form method="POST" action="/studentBookSearch">
          <div class="input-group">
            <input type="search" name="searchItem" class="form-control rounded" placeholder="Search" aria-label="Search"
            aria-describedby="search-addon" />
            <button type="submit" class="btn btn-outline-primary">search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <div class="row"> 
  <% for(let i=0; i<resultArray.length; i++){ %>
    <div class="col-sm-3">
      <div class="card" style="height: 250; margin: 10;">
        <div class="card-body">
          <p class="card-text font-weight-bold text-center"><%=resultArray[i].name%></p>
          <p class="card-text text-center">Class: <%=resultArray[i].class%></p>
          <p class="card-text text-center">Board: <%=resultArray[i].board%></p>
          <p class="card-text text-center">Subject: <%=resultArray[i].subject%></p>
          <% console.log(resultArray[i].price) %>
          <form method="POST" action="/studentAddToCart">
            <input type="hidden" name="bookID" value="<%=resultArray[i].id%>" />
            <div style="padding-top: 2%; padding-left: 30%;">
              <button type="submit" class="btn btn-success">Add to Books Cart</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <%}%>
  </div>
  
    
  </body>
  </html>