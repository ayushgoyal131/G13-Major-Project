<%- include('partials/header'); %>

<% totalSum=0 %>
<% for(var i=0; i<wishItems.length; i++){ %>
<%  totalSum= totalSum + wishItems[i].price; %>
<% console.log("Total Sum:" + totalSum); %>
<%}%>


<div id="all">
    <div id="content">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <!-- breadcrumb-->
            <nav aria-label="breadcrumb" style="padding-top: 3%;">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li aria-current="page" class="breadcrumb-item active">My wishlist</li>
              </ol>
            </nav>
          </div>
          <div class="col-lg-3">
            <!--
            *** CUSTOMER MENU ***
            _________________________________________________________
            -->
            <div class="card sidebar-menu">
              <div class="card-header">
                <h3 class="h4 card-title">Customer section</h3>
              </div>
              <div class="card-body">
                <ul class="nav nav-pills flex-column"><a href="/orders" class="nav-link active" style="background-color: #f5f5f5; color: rgba(0,0,0,.6);"><i class="fa fa-list"></i> My orders</a><a href="/wishlist" class="nav-link" style="background-color: #4fbfa8; color: #fff;"><i class="fa fa-heart"></i> My wishlist</a><a href="customer-account.html" class="nav-link"><i class="fa fa-user"></i> My account</a><a href="index.html" class="nav-link"><i class="fa fa-sign-out"></i> Logout</a></ul>
              </div>
            </div>
            <!-- /.col-lg-3-->
            <!-- *** CUSTOMER MENU END ***-->
          </div>
          <div id="wishlist" class="col-lg-9">
            <div class="box">
              <h1>My wishlist</h1>
              <p class="lead">Lists for all your shopping needs!</p>
            </div>
            <div class="row products">
              <% for(var i=0; i<wishItems.length; i++){ %>
                <div class="col-lg-3 col-md-4">
                  <div class="product">
                    <div class="flip-container">
                      <div class="flipper">
                        <div class="front"><a href="detail.html"><img src="data:image/<%=wishItems[i].image.contentType%>;base64,<%=wishItems[i].image.data.toString('base64')%>" alt="" class="img-fluid"></a></div>
                        <div class="back"><a href="detail.html"><img src="data:image/<%=wishItems[i].image.contentType%>;base64,<%=wishItems[i].image.data.toString('base64')%>" alt="" class="img-fluid"></a></div>
                      </div>
                    </div><a href="detail.html" class="invisible"><img src="data:image/<%=wishItems[i].image.contentType%>;base64,<%=wishItems[i].image.data.toString('base64')%>" alt="" class="img-fluid"></a>
                    <div class="text">
                      <h3><a href="detail.html"><%= wishItems[i].name %></a></h3>
                      <p class="price"> 
                        <del></del>Rs.<%= wishItems[i].price %>
                      </p>
                      <p class="buttons">
                        <form method="POST" action="/addToCart" class="buttons" >
                          <input type="hidden" name="productID" value="<%=wishItems[i].productID%>" />
                          <a><button type="submit" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add to Cart</button></a>
                        </form>
                      </p>
                    </div>
                    <!-- /.text-->
                  </div>
                  <!-- /.product            -->
                </div>
              <%}%>
              <!-- /.products-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer'); %>