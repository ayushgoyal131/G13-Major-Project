<%- include('partials/booksHeader'); %>


<div class= "row small-top-buffer">
    <div class= "col-lg-4"></div>
    <div class= "col-lg-4">
      <div class="container">
        <form method="POST" action="/search_books">
          <div class="input-group">
            <input type="search" name="searchItem" class="form-control rounded" placeholder="Search" aria-label="Search"
            aria-describedby="search-addon" />
            <button type="submit" class="btn btn-outline-primary">search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <div class="row">
  <% for(let i=0; i<resultArray.length; i++){ %>
    <div class="col-sm-3">
      <div class="card">
        <img class="card-img-top" src="data:image/<%=resultArray[i].image.contentType%>;base64,<%=resultArray[i].image.data.toString('base64')%>">
        <div class="card-body">
          <p class="card-text font-weight-bold font-italic text-center"><%=resultArray[i].name%></p>
          <p class="card-text font-weight-bold text-center">Rs. <%=resultArray[i].price%></p>
          <% console.log(resultArray[i].price) %>
          <form method="POST" action="/addToCart">
            <input type="hidden" name="productID" value="<%=resultArray[i].id%>" />
            <button type="submit" class="btn btn-success">Add to Cart</button>
          </form>
        </div>
      </div>
    </div>
  <%}%>
  </div>
  
    
  </body>
  </html>