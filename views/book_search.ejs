<%- include('partials/booksHeader'); %>


<div class= "row small-top-buffer">
    <div class= "col-lg-4"></div>
    <div class= "col-lg-4">
      <div class="container">
        <form method="POST" action="/search_books">
          <div class="input-group">
            <input type="search" name="searchItem" class="form-control rounded" placeholder="Search" aria-label="Search"
            aria-describedby="search-addon" />
            <button type="submit" class="btn btn-outline-primary">search</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <div class="row"> 
  <% for(let i=0; i<resultArray.length; i++){ %>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <p class="card-text font-weight-bold font-italic text-center">Name: <%=resultArray[i].name%></p>
          <p class="card-text font-weight-bold text-center">Class: <%=resultArray[i].class%></p>
          <p class="card-text font-weight-bold text-center">Board: <%=resultArray[i].board%></p>
          <p class="card-text font-weight-bold text-center">Subject: <%=resultArray[i].subject%></p>
          <form method="POST" action="/addToBookstoreDb">
            <input type="hidden" name="bookID" value="<%=resultArray[i].id%>" />
            <div>
              <span class="card-text font-weight-bold">Buy Price: </span><input type="number" name="buyPrice" >
            </div>
            <div style="padding-top: 5%;">
              <span class="card-text font-weight-bold text-center">Sell Price: </span><input type="number" name="sellPrice">
            </div>
            <div style="padding-top: 5%;">
              <span class="card-text font-weight-bold text-center">Quantity:   </span><input type="number" name="quantity" value="1">
            </div>
            <div style="padding-top: 5%;">
              <button type="submit" class="btn btn-success">Add to my DB</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <%}%>
  </div>
  
    
  </body>
  </html>