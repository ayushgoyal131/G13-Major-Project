<%- include('partials/header'); %>

<div id="all">
    <div id="content">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <!-- breadcrumb-->
            <nav aria-label="breadcrumb" style="padding-top: 3%;">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li aria-current="page" class="breadcrumb-item active">Checkout - Payment method</li>
              </ol>
            </nav>
          </div>
          <div id="checkout" class="col-lg-9">
            <div class="box">
                <h1>Checkout - Payment method</h1>
                <div class="nav flex-column flex-sm-row nav-pills"><a href="/deliveryAddress" class="nav-link flex-sm-fill text-sm-center"> <i class="fa fa-map-marker"></i></a><a href="#" class="nav-link flex-sm-fill text-sm-center active"> <i class="fa fa-money"></i>Payment Method</a><a href="#" class="nav-link flex-sm-fill text-sm-center disabled"> <i class="fa fa-eye"></i></a></div>
                <div class="content py-3">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="box payment-method">
                        <h4>UPI</h4>
                        <br>
                        <p></p>
                        <div class="box-footer text-center">
                          <input type="radio" name="payment" value="payment1">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="box payment-method">
                        <h4>Payment gateway</h4>
                        <p>Debit/Credit/ATM Card</p>
                        <div class="box-footer text-center">
                          <input type="radio" name="payment" value="payment2">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="box payment-method">
                        <h4>Cash on delivery</h4>
                        <br>
                        <div class="box-footer text-center">
                          <input type="radio" name="payment" value="payment3">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="box payment-method">
                        <h4>Gift Card</h4>
                        <br>
                        <div class="box-footer text-center">
                          <input type="radio" name="payment" value="payment3">
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- /.row-->
                </div>
                <!-- /.content-->
                <div class="box-footer d-flex justify-content-between"><a href="/cart" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i>Back to Cart</a>
                  <form method="post" action="/checkout">
                  <button type="submit" class="btn btn-primary">Make Payment<i class="fa fa-chevron-right"></i></button>
                  </form>
                </div>
              
              <!-- /.box-->
            </div>
          </div>
          <!-- /.col-lg-9-->
          <div class="col-lg-3">
            <div id="order-summary" class="card">
              <div class="card-header">
                <h3 class="mt-4 mb-4">Order summary</h3>
              </div>
              <div class="card-body">
                <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
                <div class="table-responsive">
                  <table class="table">
                    <tbody>
                      <tr>
                        <td>Order subtotal</td>
                        <th><%=totalSum%></th>
                      </tr>
                      <tr>
                        <td>Shipping</td>
                        <th>50.00</th>
                      </tr>
                      <tr>
                        <td>Tax</td>
                        <th>0.00</th>
                      </tr>
                      <tr>
                        <td>Discount</td>
                        <th>0.00</th>
                      </tr>
                      <tr class="total">
                        <td>Total</td>
                        <%var finalAmount= 0%>
                        <% finalAmount = finalAmount+totalSum +50+0+0 %>
                        <th><%=finalAmount%></th>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.col-lg-3-->
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer'); %>